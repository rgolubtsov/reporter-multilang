BIN_DIR      = bin
LIB_DIR      = lib
SRC_DIR      = src
DAT_DIR      = $(LIB_DIR)/data
BASE_PACKAGE = ReporterPrimary
BASE_CLASS   = $(BASE_PACKAGE).pm
CLASSES      = $(SRC_DIR)/$(BASE_CLASS) $(SRC_DIR)/$(BASE_PACKAGE)
PRJ_PREFIX   = reporter-
PRJ_SUFFIX   = -pdf
SCRIPT1      = $(PRJ_PREFIX)mysql$(PRJ_SUFFIX)
SCRIPT2      = $(PRJ_PREFIX)postgres$(PRJ_SUFFIX)
SCRIPT3      = $(PRJ_PREFIX)sqlite$(PRJ_SUFFIX)
SQLITE_DBASE = reporter_multilang.xz

# Specify flags and other vars here.
PERL      = perl
PERLFLAGS = -c

CD           = cd
GREP         = grep
EXIT         = exit
EXIT_FAILURE = 1
EXIT_SUCCESS = 0
MKDIR        = mkdir
ECHO         = echo
ECHOFLAGS    = -e
SED          = sed
SEDFLAGS     = -i -e
SEDREGEX     = "s/^\ //g"
CHMOD        = chmod
CHMODFLAGS   = -v
CHMODMODE    = 755
CP           = cp
CPFLAGS      = -vR
UNXZ         = unxz
UNXZFLAGS    = -v
RMFLAGS      = -vR

# Startup scripts for MySQL, PostgreSQL, and SQLite implementations
# like here documents.
# MySQL:
define SCRIPT1_FULL
#!/usr/bin/env $(PERL)\n\
# =============================================================================\n\
# reporter-cli/sql-pdf/$(PERL)/$(BIN_DIR)/$(SCRIPT1)\n\
# =============================================================================\n\
# Reporter Multilang. Version 0.1\n\
# =============================================================================\n\
# Autogenerated by GNU Make.\n\
\n\
use strict;\n\
use warnings;\n\
use utf8;\n\
use v5.10;\n\
\n\
# Helper constants.\n\
use constant _LIB   => \"$(LIB_DIR)\";\n\
use constant _SLASH =>   \"/\";\n\
use constant _UPDIR =>  \"..\";\n\
\n\
my \044libdir = _LIB;\n\
\n\
# Calculating the actual lib dir path.\n\
BEGIN {\n\
" "" "" "" "my @script_path = split(/\//, __FILE__);\n\
" "" "" "" "my \044script_name = pop(@script_path);\n\
" "" "" "" "my \044bindir_name = pop(@script_path);\n\
\n\
" "" "" "" "\044libdir = join(_SLASH, @script_path, _LIB);\n\
\n\
" "" "" "" "if (\044libdir eq _LIB) {\n\
" "" "" "" "" "" "" "" "\044libdir = _UPDIR . _SLASH . _LIB;\n\
" "" "" "" "}\n\
}\n\
\n\
use lib \044libdir;\n\
\n\
use $(BASE_PACKAGE);\n\
\n\
# The database switch.\n\
# It indicates that the chosen database is managed by MySQL.\n\
use constant _MY_CONNECT => \"mysql\";\n\
\n\
# Starting up the app.\n\
$(BASE_PACKAGE)->startup([_MY_CONNECT]);\n\
\n\
# vim:set nu et ts=4 sw=4:
endef

